{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(css|js|svg|ttf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/file/**",
        "destination": "/account.html"
      },
      {
        "source": "/folder/**",
        "destination": "/account.html"
      },
      {
        "source": "/account/shared",
        "destination": "/account.html"
      },
      {
        "source": "/account/starred",
        "destination": "/account.html"
      },
      {
        "source": "/account/trash",
        "destination": "/account.html"
      },
      {
        "source": "/account/vault",
        "destination": "/account.html"
      },
      {
        "source": "/settings/**",
        "destination": "/settings.html"
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    }
  }
}
