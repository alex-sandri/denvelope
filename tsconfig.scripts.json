{
    "include": [
        "src/scripts/*.ts",
    ],
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    }
}